@helper GenerateHiddenHtml(WF_FlowPropertys prop, string guid)
    {
        @Html.Hidden("PropertyList.Index", guid);
        @Html.Hidden("PropertyList[" + guid + "].Id", prop?.FlowPropertyId.ToString())
        @Html.Hidden("PropertyList[" + guid + "].Type", prop?.PropertyType.ToString())
}

@helper GenerateTextBox(string propName, string id = null, bool disabled = false, string style = null, string placeholder = null, bool showValue = true, bool readOnly = false, bool removeRequired = false)
    {
        var guid = Guid.NewGuid().ToString();
        PropertiesValue properties = ViewBag.Properties as PropertiesValue;
        WF_FlowPropertys prop = properties.PropertyInfo.FirstOrDefault(p => p.StatusId < 0 && p.PropertyName == propName);
        var value = showValue ? GetPropertyValue(properties, prop) : null;
        var attributes = GetAttributesByPropertyName(propName, id, disabled, style);
        if (placeholder != null)
        {
            attributes.Add("placeholder", placeholder);
        }
        if (readOnly)
        {
            attributes.Add("readonly", "readonly");
            if (!disabled)
            {
                attributes["class"] += " backgroundcolor-transparent";
            }
        }
        if (removeRequired)
        {
            if (attributes.ContainsKey("data-val"))
            {
                attributes.Remove("data-val");
            }
        }
        @Html.TextBox("PropertyList[" + guid + "].Value", value, attributes)
        @GenerateHiddenHtml(prop, guid)
}

@helper GenerateHidden(string propName, string cid, string validationMessage = null, string group = null)
    {
        var guid = Guid.NewGuid().ToString();
        PropertiesValue properties = ViewBag.Properties as PropertiesValue;
        WF_FlowPropertys prop = properties.PropertyInfo.FirstOrDefault(p => p.StatusId < 0 && p.PropertyName == propName);
        var value = GetPropertyValue(properties, prop);
        IDictionary<string, object> attributes = new Dictionary<string, object>();
        attributes.Add("id", cid);
        if (group != null)
        {
            attributes.Add("data-group-name", group);
        }
        if (validationMessage != null)
        {
            attributes.Add("data-val", "true");
            attributes.Add("data-val-required", validationMessage);
            @Html.ValidationMessage("PropertyList[" + guid + "].Value")
        }
        @Html.Hidden("PropertyList[" + guid + "].Value", value, attributes)
        @GenerateHiddenHtml(prop, guid)
}

@helper GenerateRadioButton(string propName, string value, string id = null, bool appendHiddenControls = false, string existsGuid = null, string groupName = null, bool disabled = false, bool removeRequired = false)
    {
        var guid = existsGuid ?? Guid.NewGuid().ToString();
        PropertiesValue properties = ViewBag.Properties as PropertiesValue;
        WF_FlowPropertys prop = properties.PropertyInfo.FirstOrDefault(p => p.StatusId < 0 && p.PropertyName == propName);
        var stringValue = GetPropertyValue(properties, prop);
        bool isChecked = stringValue.EqualsIgnoreCaseAndBlank(value);
        var attributes = GetAttributesByPropertyName(propName, id, disabled);
        attributes.Remove("class");
        if (groupName != null)
        {
            attributes.Add("data-group-name", groupName);
        }
        if (removeRequired)
        {
            if (attributes.ContainsKey("data-val"))
            {
                attributes.Remove("data-val");
            }
        }
        @Html.RadioButton("PropertyList[" + guid + "].Value", value, isChecked, attributes)
        if (appendHiddenControls)
        {
            @GenerateHiddenHtml(prop, guid)
        }
}

