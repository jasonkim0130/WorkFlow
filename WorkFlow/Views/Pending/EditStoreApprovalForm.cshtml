                } else {
                    secondRenewalFrom.val("");
                }
                secondRenewalFrom.trigger("change");
            }
            validateInput((from.val() !== "" &&
                    to.val() !== "" &&
                    new Date(to.val()).getTime() < new Date(from.val()).getTime()),
                to, errorSpan)
        });

        $("#txtStoreSize").bind("change", function () {
            withinGuideline();
            calcExpectedTime();
        });
    });
