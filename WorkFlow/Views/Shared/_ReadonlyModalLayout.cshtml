@using Resources
<div class="modal" id="div_modal_cont" style="display: block !important;">
    <div class="modal-dialog" style="margin-top: 60px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$(this).closest('#div_modal_cont').remove();">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                @RenderBody()
            </div>
            <div class="modal-footer">
                <div class="alert alert-danger text-left hidden modal-msg" id="div_modal_message">
                </div>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="$(this).closest('#div_modal_cont').remove();">@StringResource.OK</button>
            </div>
        </div>
    </div>
</div>